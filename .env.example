# Environment variables configuration
# Copy this to .env.local and fill in your actual values

# React App Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_MONGODB_URI=mongodb://localhost:27017/bobtheraspberrypi

# Google Cloud Platform
GCP_PROJECT_ID=your-gcp-project-id
GCP_SA_KEY=your-service-account-key-json

# MongoDB Configuration (for production)
MONGODB_URI=mongodb://admin:password@localhost:27017/bobtheraspberrypi?authSource=admin

# API Configuration
PORT=5000
NODE_ENV=development

# Chess API Keys (if using external services)
LICHESS_API_TOKEN=your-lichess-token
CHESS_COM_API_KEY=your-chess-com-key

# Crypto API Keys
COINMARKETCAP_API_KEY=your-coinmarketcap-key
BINANCE_API_KEY=your-binance-key
BINANCE_API_SECRET=your-binance-secret

# System Monitoring
MONITORING_ENABLED=true
METRICS_INTERVAL=60000

# Security
JWT_SECRET=your-jwt-secret-key
SESSION_SECRET=your-session-secret

# Notifications
EMAIL_FROM=noreply@bobtheraspberrypi.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password